#include <iostream>
#include <algorithm>
using namespace std;
bool cheak(int a, int b) {					// a > b
	if (b == 1) return true;
	/*int num = a % b;
	if (!num) return false;
	if (num == 1) return true;
	cheak(max(b, num), min(b, num));*/
	while (b != 0) {
		int temp = b;
		b = a%b;
		a = temp;
	}
	if (a == 1)	return true;
	else		return false;
}

int main(void){
	int TestTimes = 0;
	cin >> TestTimes;
	while (TestTimes--){
		int INPUT = 0;
		cin >> INPUT;
		if (INPUT == 1)			cout << "1" << endl;
		else if (INPUT == 2)	cout << "2" << endl;
		else {
			int num = INPUT - 1;
			if (!(num % 2) && cheak(INPUT*(INPUT - 1), --num)) {
				cout << INPUT * (INPUT - 1) * num << endl;
				continue;
			}
			while (num -= 2)
				if (cheak(INPUT*(INPUT-1), num)/* && cheak(INPUT - 1, num)*/)
					break;
			cout << INPUT * (INPUT - 1) * num << endl;
		}
	}
	return 0;
}
